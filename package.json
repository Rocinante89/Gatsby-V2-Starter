{
  "name": "gatsby-starter-ts",
  "private": true,
  "description": "A simple starter to get up and developing quickly with Gatsby. Includes TS and some QOL features",
  "version": "0.1.0",
  "author": "Cillian Barron <barroncillian@gmail.com>",
  "dependencies": {
    "gatsby": "2.0.85",
    "gatsby-image": "2.0.25",
    "gatsby-plugin-manifest": "2.0.13",
    "gatsby-plugin-offline": "2.0.21",
    "gatsby-plugin-react-helmet": "3.0.5",
    "gatsby-plugin-robots-txt": "1.3.0",
    "gatsby-plugin-sharp": "2.0.17",
    "gatsby-plugin-sitemap": "2.0.4",
    "gatsby-plugin-typescript": "2.0.3",
    "gatsby-source-filesystem": "2.0.12",
    "gatsby-transformer-sharp": "2.1.10",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-helmet": "5.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.15",
    "@types/jest": "23.3.12",
    "@types/react-helmet": "5.0.8",
    "@types/react-test-renderer": "16.0.3",
    "codeclimate-test-reporter": "0.5.1",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "eslint": "5.12.0",
    "eslint-config-react-app": "3.0.6",
    "eslint-config-xo-react": "0.17.0",
    "eslint-plugin-react": "7.12.3",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "react-test-renderer": "16.7.0",
    "ts-jest": "23.10.5",
    "ts-lint": "4.5.1",
    "typescript": "3.2.2",
    "xo": "0.23.0"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "develop": "gatsby develop",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint:js": "xo --ignore \"gatsby-config.js\"",
    "start": "npm run develop",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "...": "..."
    }
  },
  "xo": {
    "extends": "xo-react/space",
    "space": true,
    "rules": {
      "no-case-declarations": 0,
      "default-case": 0
    }
  },
  "jest": {
    "globals": {
      "__LINK_PREFIX__": "",
      "__PREFIX_LINKS__": ""
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rocinante89/Gatsby-V2-Starter"
  },
  "bugs": {
    "url": "https://github.com/Rocinante89/Gatsby-V2-Starter/issues"
  }
}
